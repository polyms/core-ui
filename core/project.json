{
  "name": "core",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "core/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project core --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "cwd": "core",
        "outputPath": "dist/core"
      },
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["vite"]
        }
      ],
      "outputs": ["{workspaceRoot}/dist/core"],
      "metadata": {
        "technologies": ["vite"],
        "description": "Run Vite build",
        "help": {
          "command": "pnpm exec vite build --help",
          "example": {
            "options": {
              "sourcemap": true,
              "manifest": "manifest.json"
            }
          }
        }
      },
      "configurations": {},
      "parallelism": true
    }
  }
}
